---
import devicesData from '../../devices.json';
import katalogus from '../../katalogus.json';

const devices = Array.isArray(devicesData) ? devicesData : (devicesData.items || []);

const getStatusClass = (status) => {
  if (!status) return 'default';
  return status.toLowerCase().replace(/√°/g, 'a').replace(/√©/g, 'e').replace(/ /g, '-');
};
